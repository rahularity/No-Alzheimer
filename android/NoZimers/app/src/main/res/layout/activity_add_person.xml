<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ithought.rahul.nozimers.AddPerson">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/contactImage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/rahul"
                android:layout_gravity="center"/>


            <EditText
                android:id="@+id/contactName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:padding="5dp"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/comfortaa_bold"
                android:layout_margin="15dp"/>

            <EditText
                android:id="@+id/contactLivesIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Lives In"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:fontFamily="@font/comfortaa_bold"
                android:layout_margin="15dp"/>

            <EditText
                android:id="@+id/contactAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Age"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:fontFamily="@font/comfortaa_bold"
                android:layout_margin="15dp"/>

            <EditText
                android:id="@+id/contactPlace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Place Of Meeting"
                android:padding="5dp"
                android:textSize="20sp"
                android:fontFamily="@font/comfortaa_bold"
                android:layout_margin="15dp"/>

            <EditText
                android:id="@+id/contactRelation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Relation"
                android:padding="5dp"
                android:textSize="20sp"
                android:fontFamily="@font/comfortaa_bold"
                android:layout_margin="15dp"/>

            <EditText
                android:id="@+id/contactNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Notes"
                android:padding="5dp"
                android:textSize="20sp"
                android:fontFamily="@font/comfortaa_bold"
                android:layout_margin="15dp"/>

            <Button
                android:id="@+id/contactSubmit"
                android:layout_marginBottom="0dp"
                android:background="@drawable/look"
                android:layout_width="wrap_content"
                android:padding="20dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="Add to known contacts"
                android:textStyle="bold"/>



        </LinearLayout>

    </ScrollView>




</LinearLayout>